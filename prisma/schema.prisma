generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String   @id @default(uuid())
  title         String
  description   String
  url           String   @unique
  afiliate      String?
  afiliateLink  String?
  price         Float?
  images        String[] // Array de URLs de imagens
  reviewVideos  String[] // Array de URLs de vídeos
  video         String?
  clicks        Int      @default(0) // Contador de cliques, começa em 0
  createdAt     DateTime @default(now()) // Data de criação
  updatedAt     DateTime @updatedAt // Atualizado automaticamente
}